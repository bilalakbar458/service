<h1>
<%= @business.name %>

</h1>

<h2>Tasks</h2>
<ul>
<% for task in @business.tasks %>
    <li><%= link_to task.title, task_path(task) %> (<%= task.task_type %>)</li>
<% end %>
</ul>

<%= link_to "Add a task", new_task_path(business_id: @business) %>




<h2>Team Members</h2>
<ul>
<% for user in @business.users %>
    <li><%= user.name %></li>
<% end %>

<%= link_to "Delete Business", business_path(@business), method: :delete, data: { confirm: 'Are you sure?' } %>




</ul>